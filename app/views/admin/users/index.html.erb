<div class="image-container" xmlns="http://www.w3.org/1999/html">
  <%= image_tag "healthcare.png" , size: "2048x1080"  %>

</div>

<div class="verdunkelung">

  <%= render partial: 'pages/leftsidepart'%>
  <p id="notice"><%= notice %></p>
  <div id="tabellenPlatz">
    <div id="wikiTitle">Users</div>


<h1></h1>

<table id="usertable">
  <thead>
    <tr>
      <th>Username</th>
      <th>Frstname</th>
      <th>Lastname</th>
      <th>Email</th>
      <th>Phonenumber</th>
      <th>Age</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.user_name%></td>
        <td><%= user.is_not_given? user.first_name%></td>
        <td><%= user.is_not_given? user.last_name%></td>
        <td><%= user.email%></td>
        <td><%= user.is_not_given? user.phone%></td>
        <td><%= user.is_not_given? user.age%></td>
        <td><%= user.role%></td>
        <td>
          <div class="dt-table-link-border">
            <%= link_to 'edit', edit_admin_user_path(user), class: "dt-table-link" %>
          </div>
        </td>
        <td>
          <div class="dt-table-link-border">
            <%= link_to 'delete', admin_user_path(user), class:"dt-table-link", method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
    <div class="dt-table-link-border">
      <%= link_to 'create new user', new_admin_user_path, class:"dt-table-link" %>
    </div>
  </div>
</div>